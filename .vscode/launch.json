    "version": "0.2.0",
    "configurations": [
        {
            "name": "C# Console Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${fileDirname}/bin/Debug/net8.0/main.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "PART_TO_RUN": "Part1"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                {
                    "name": "PART_TO_RUN",
                    "value": "Part1"
                }
            ],
            "console": "externalTerminal"
        }
    ]
}